FS = require('fs')
Path = require('path')
URL = require('url')
html2jade = require('../lib/html2jade')

options = { scalate: false }
# options = { scalate: false }

parser = new html2jade.Parser(options)
converter = new html2jade.Converter(options)

input = "#{__dirname}/../test.html"
output = FS.createWriteStream "#{__dirname}/../testout.jade", {
    flags: 'w'
    encoding: 'utf8'
}
output = new html2jade.Output(output)

parser.parse input, (errors, window) ->
  if errors?.length
    errors
  else
    converter.document window.document, output
    null
